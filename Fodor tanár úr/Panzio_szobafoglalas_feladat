JS FILE:

let szobaTipus = [
    { "tipus": "Egyágyas", "ar": "9000", "fo": "1" },
    { "tipus": "Kétágyas", "ar": "15000", "fo": "2"},
    { "tipus": "Kétágyas 1 pótággyal", "ar": "18000", "fo": "3" },
    { "tipus": "Kétágyas 2 pótággyal", "ar": "21000", "fo": "4" }
];

// CTRL+D - kijelöli az összes kijelölt elemet

let ellatas=[
    {tipus: "Reggeli", ar: "900"},
    {tipus: "Félpanzió", ar: "2900"},
    {tipus: "Teljes panzió", ar: "4900"}

];

let furdo =[
    {tipus: "Beltéri medencék", ar: "800" },
    {tipus: "Kültéri medencék", ar: "900" },
    {tipus: "Szauna belépő", ar: "1000" },
    {tipus: "Teljes belépő", ar: "2000" }
];

let szobaFieldset = document.querySelector("#szobatip");
for (let i = 0; i < szobaTipus.length; i++) {
    let input = document.createElement("input");
    input.type = "radio";
    input.id = "szoba" + i;
    input.name = "szobaTipus";
    input.value = i;
    if (i==1) input.checked=true;
    szobaFieldset.appendChild(input);

    let label = document.createElement("label");
    //label.setAttribute("for", i + 1);
    //label.htmlFor = i+1;
    label.innerHTML = Object.values(szobaTipus[i])[0] + " - " + Object.values(szobaTipus[i])[1] + " Ft/éj";
    szobaFieldset.appendChild(label);

    let br = document.createElement("br");
    szobaFieldset.appendChild(br);
}

let ellatasFieldset = document.querySelector("#ellatas");
for (let i = 0; i < ellatas.length; i++) {
    let input = document.createElement("input");
    input.type = "radio";
    input.id = "ellatas" + i;
    input.name = "ellatas";
    input.value = i;
    if (i==0) input.checked=true;
    ellatasFieldset.appendChild(input);

    let label = document.createElement("label");
    label.innerHTML = Object.values(ellatas[i])[0] + " - " + Object.values(ellatas[i])[1] + " Ft/nap/fő";
    ellatasFieldset.appendChild(label);


    let br = document.createElement("br");
    ellatasFieldset.appendChild(br);
}

let furdoFieldset = document.querySelector("#furdo");
for (let i = 0; i < furdo.length; i++) {
    let input = document.createElement("input");
    input.type = "checkbox";
    input.id = "furdo" + i;
    input.name = "furdo" + i;
    input.value = i;
    furdoFieldset.appendChild(input);

    let label = document.createElement("label");
    label.innerHTML = Object.values(furdo[i])[0] + " - " + Object.values(furdo[i])[1] + " Ft/nap/fő";
    furdoFieldset.appendChild(label);


    let br = document.createElement("br");
    furdoFieldset.appendChild(br);
}

function szamol(){
    // napok száma:

    let erkezes=Date.parse(document.querySelectorAll("input[type='date']")[0].value); //Date.parse - milisecundummá alakítja át az időt, így már lehet vele számolni.
    let tavozas=Date.parse(document.querySelectorAll("input[type='date']")[1].value); 
    
    // szobatípus meghatározása:

    let szobaTip = Number(document.querySelector("input[name='szobaTipus']:checked").value);

    let szobaAr = szobaTipus[szobaTip].ar;
    let szobaFo = szobaTipus[szobaTip].fo;

    // ellátás kiválasztása:

    let ellatasTip = Number(document.querySelector("input[name='ellatas']:checked").value);

    let ellatasAr = ellatas[ellatasTip].ar;
   

    // fürdő mkiválasztása:

    let checkboxes = document.querySelectorAll("input[type='checkbox']"); // kiválasztjuk az összes checkboxot

    let furdoAr = 0; // létrehozunk egy változót a kipipált checkboxoknak

    for (let i = 0; i < checkboxes.length; i++) {
        if (checkboxes[i].checked) {
            furdoAr += Number(furdo[i].ar);
        }        
    }
    
    if (tavozas < erkezes){
        alert("Az érkezés dátumánál későbbi dátumot adj meg!")
    }
    else {
    let napokSzama=(tavozas-erkezes) / (1000 * 60 * 60 * 24);
    
    // összesen:

    let inputOsszesen = document.querySelector("#osszesen");
    inputOsszesen.value = napokSzama * szobaAr + napokSzama * ellatasAr * szobaFo + furdoAr * napokSzama * szobaFo;
    }
    
}
