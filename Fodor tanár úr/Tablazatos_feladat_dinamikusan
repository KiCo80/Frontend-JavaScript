JS FILE:

let users = [ // létrehozunk egy tömböt
{fname: "Otto", laname: "Mark", age:89}, // ALT + SHIFT+le nyíl = teljes sort másol
{fname: "Eszter", laname: "Terp", age:82}, 
{fname: "Pál", laname: "Kala", age:76}, 
{fname: "Zoltán", laname: "Pofá", age:77},
{fname: "Kozsó", laname: "Homo", age:81}, 
{fname: "Rudi", laname: "Buzi", age:85} 
];
// ezzel készen is van egy JSon file, a JSon file így néz ki :)

let tableBody=document.querySelector("tbody"); // ha nem változó, akkor mindig ""-be kell tenni


/*
for (let k in users){ // "for-in" ciklussal megyünk végig a tömb elemein (amik objektumok)
    let tr =document.createElement("tr");
    let td =document.createElement("td");
    td.innerHTML=k;
    tr.appendChild(td);
    tableBody.appendChild(tr);
}
*/

function createTd(html, parent){ // a html = innerHtml (tartalom), a parent = szülő objektum
    let td=document.createElement("td");
    td.innerHTML=html;
    parent.appendChild(td); // itt már változó a td
}

for (let k in users){
    let tr = document.createElement("tr");
    for (let value of Object.values(users[k])){ // "for-of" ciklussal megyünk végig
        createTd(value, tr); // a "tr" itt változó        
    }
        tableBody.appendChild(tr);
}

// ezt kell beírni a Konzolba pl.:
// Object.values(users[1])[0];


// hf: Infojegyzet.hu - Feladatok - szorzótábla (56. oldal)
// hf-hoz: td.className=...
