JS FILE:

let benzinFogyasztas = [
    {henger : "1000 cm3-ig", fogyasztas: 7.6, egyseg: "l/100km"},
    {henger: "1001-1500 cm3 között", fogyasztas: 8.6, egyseg:"l/100km"},
    {henger: "1501-2000 cm3 között", fogyasztas: 9.5, egyseg: "l/100km"},
    {henger: "2001-3000 cm3 között", fogyasztas: 11.4, egyseg: "l/100km" },
    {henger: "3001 cm3 fölött", fogyasztas: 13.3, egyseg: "l/100km"}
];

let gazolajFogyasztas=[
    {henger: "1500 cm3-ig", fogyasztas: 5.7, egyseg: "l/100km"},
    {henger: "1501-2000 cm3 között", fogyasztas: 6.7, egyseg: "l/100km"},
    {henger: "2001-3000 cm3 között", fogyasztas: 7.6, egyseg: "l/100km"},
    {henger: "3001 cm3 fölött", fogyasztas: 9.5, egyseg: "l/100km"}
];

function removeAllOption() {
    let normaSelect = document.querySelector("#fogyasztasinorma");
    if (document.elszamolas.fogyasztasinorma.options.length>1){
        for (let i = normaSelect.options.length - 1; i >= 1; i--) {
        normaSelect.options[i].remove();
        }
    }
}

function fogyasztas(){

    if(document.elszamolas.uzemanyagfajtaja.value=="benzin"){

        let fogyasztas=document.querySelector('#fogyasztasinorma');

        document.elszamolas.fogyasztasinorma.options[0].text="";

        for(i=0; i<benzinFogyasztas.length; i++) {
            let option=document.createElement("option");
            option.id = "benzinfogy" + i;
            fogyasztas.appendChild(option);
            option.innerHTML=Object.values(benzinFogyasztas[i])[0]+" - "+Object.values(benzinFogyasztas[i])[1]+" "+Object.values(benzinFogyasztas[i])[2];
            document.elszamolas.fogyasztasinorma.selectedIndex=0
        }
    }
    else if(document.elszamolas.uzemanyagfajtaja.value=="gazolaj"){

        let fogyasztas=document.querySelector('#fogyasztasinorma');

        document.elszamolas.fogyasztasinorma.options[0].text="";

        for(i=0; i<gazolajFogyasztas.length; i++) {
            let option=document.createElement("option");
            option.id = "gazolajfogy" + i;
            fogyasztas.appendChild(option);
            option.innerHTML=Object.values(gazolajFogyasztas[i])[0]+" - "+Object.values(gazolajFogyasztas[i])[1]+" "+Object.values(gazolajFogyasztas[i])[2];
            document.elszamolas.fogyasztasinorma.selectedIndex=0
        }
    }
}

function figyelmeztetes(){
    if(document.elszamolas.uzemanyagfajtaja.value=="nulla"){
    alert("Válassz üzemanyagot!");
    }
}

function ellenorzes(){

    let inputok=document.elszamolas.querySelectorAll("input[type='text'], input[type='number'], input[type='date']");

    let inputTomb=[];

    for (let i = 0; i < inputok.length; i++) {
        if (inputok[i].value==""){ 
            inputTomb+=inputok[i].id+"\n"
        }
        else{
            inputTomb.count=0;
        }
    }
    
    let selectek=document.elszamolas.querySelectorAll("select");

    let selectTomb=[];

    for (let i = 0; i < selectek.length; i++) {
        if (selectek[i].value=="nulla"){
            selectTomb+="Üzemanyag fajtája"+"\n"
        }  
        else if(selectek[i].value==0){
            selectTomb+="Fogyasztási norma"+"\n"
        }
        else{
            selectTomb.count=0;
        }
    }

    if (inputTomb.count==0 && selectTomb.count==0){
        szamol();
    }
    
    else{
        alert("Az alábbi mezők kitöltése kötelező: "+ "\n"+"\n"+(inputTomb)+(selectTomb));
    }
}

function szamol(){       

    let normaindex = document.querySelector("#fogyasztasinorma").options.selectedIndex;

    if(document.elszamolas.uzemanyagfajtaja.value=="benzin"){

        norma = Number(Object.values(benzinFogyasztas[normaindex-1])[1]);
    }
    if(document.elszamolas.uzemanyagfajtaja.value=="gazolaj"){
       
        norma = Number(Object.values(gazolajFogyasztas[normaindex-1])[1]);
    }
    
    document.osszegek.utikoltseg.value = Math.round(norma*document.elszamolas.uzemanyagara.value*document.elszamolas.osszestavolsag.value/100);
    
    document.osszegek.amortizacio.value=Math.round(document.elszamolas.osszestavolsag.value*15);
    
    document.osszegek.osszeskoltseg.value=Number(document.osszegek.utikoltseg.value)+Number(document.osszegek.amortizacio.value);

    document.osszegek.nyomtatas.disabled = false;
}



SEGÍTSÉG TANÁR ÚRTÓL:
1. törölni kell a korábbiakat, pl.:
function removeAllOption() {
    let normaSelect = document.querySelector("#fogyasztasinorma");
    for (let i = normaSelect.options.length - 1; i >= 0; i--) {
        normaSelect.options[i].remove();
    }
}
2. az indexét tudod kiválaszani:
let normaindex = document.querySelector("#fogyasztasinorma").options.selectedIndex;
utána: norma = Number(Object.values(benzinFogyasztas[normaindex])[1]);
