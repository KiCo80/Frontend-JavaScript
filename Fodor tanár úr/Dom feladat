HTML FILE:

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dom</title>
</head>
<body>
    <p id=myInput>myInput</p>
    <form>
        <label for="fname">First name:</label><br>
        <input type="text" id = "fname" name = "fname" value = "John"><br>
        <label for="lname">Last name:</label><br>
        <input type="text" id = "lname" name = "lname" value = "Lennon"><br>
        <input type="submit" value = "submit">
    </form>
    <p class=myClass>myClass</p>
</body>
</html>


JS FILE:

//Konzolon:

document.getElementById("fname");

document.getElementByName("lname");

document.getElementsByName("lname");

document.querySelector("#fname");

document.querySelector(".myClass");

document.querySelector("label");

document.querySelectorAll("label");

let myInput = document.querySelector("#myInput");
myInput.innerHTML = 'Almafa';
myInput.style.color = 'red';
myInput.style.backgroundColor = 'gray';
