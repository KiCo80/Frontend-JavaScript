JS FILE:

function calcAmount()
{
    let ar=1000;
    let mennyiseg = document.querySelector("input[name='mennyiseg']").value;
    mennyiseg=parseInt(mennyiseg);
    if (mennyiseg>10 || mennyiseg==0){
        alert ("Maximum csak 10 lehet a mennyiség! Helyes darabszámot adj meg!")
        let message=document.querySelector("span.message");
        message.innerHTML="0";
    }
    else{    
        let vegosszeg=mennyiseg*ar;
        let message=document.querySelector("span.message");
        message.innerHTML=vegosszeg;
    }
}


