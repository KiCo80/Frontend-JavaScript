JS FILE:

function szamol(){
    let suly=document.getElementById("suly").value;
    suly=parseInt(suly);   
    let magassag=document.getElementById("magassag").value;
    magassag=parseInt(magassag);
    let tti=Math.round(suly/(Math.pow((magassag/100),2)),2);
    let x = tti
    document.getElementById("ttiEredmeny").innerHTML = tti;

if (tti<18) {
    document.getElementById("ttiEredmeny").style.backgroundColor = "yellow";    
}
else if (tti<=25 && tti >=18){
    document.getElementById("ttiEredmeny").style.backgroundColor = "yellowgreen";    
}
else {    
    document.getElementById("ttiEredmeny").style.backgroundColor="red"    
}
}
