sendButton.addEventListener("click", function() { //hozzáadunk egy click eseményt és ide bele írjuk a függvényt.
  alert("Hello KiCo!")
})

window.addEventListener("resize", function(){ // képernyő méretének lekérdezése (ha átméretezni akarjuk)
  console.log(this.innerWidth+" x", this.innerHeight);
})

let products = ["Hamburger", "Libamáj", "Szalonna", "HDD", "Toyota"];
let productsSelect = document.querySelector("#product"); //szülő tag
for (let i = 0; i < products.length; i++) {
  let option = document.createElement("option");
  option.value = i;
  option.innerHTML = products[i];
  productsSelect.appendChild(option);
}
