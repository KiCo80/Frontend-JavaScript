JS FILE:

function calcAmount() {
  let price = 1000;
  let quantityInput = document.querySelector("input[name='quantity']").value;
  let amountNumber = Number(quantityInput);
  let amount = amountNumber * price;

  if (amountNumber > 10) {
    alert("Maximum 10 terméket rendelhet! ");
  } else if (amountNumber < 1) {
    alert("Minimum 1 terméket kell rendelnie!");
  } else {
    let amount = amountNumber * price;
    let message = document.querySelector("span.message");
    message.innerHTML = amount;
  }  
}

let sendButton = document.querySelector(".btn");

// sendButton.onclick = calcAmount; // a button-hoz csak hozzárendeljük a függvényt, nem pedig meghívjuk, ezért nem kell a "()"!
