    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panzió</title>
</head>
<body>
    <?php
    $getFile = file_get_contents("./panzio.json");
    $data = json_decode($getFile, false);

    echo '<pre>';
    echo print_r($data, true);
    echo '</pre>';

    echo '<h2>Szobák:</h2>';
    
    foreach($data->szobaTipus as $obj){
        echo '<b>'.$obj->tipus.': '.$obj->ar.'</b>'; // ezekkel lehet variálni, izgalamas! :)
        echo ': ';
        echo $obj->ar;
        echo ' Ft<br>';
    }

    echo '<h2>Ellátás:</h2>';
    
    foreach($data->ellatas as $obj){
        echo $obj->tipus;
        echo ': ';
        echo $obj->ar;
        echo ' Ft<br>';
    }

    echo '<h2>Fürdő:</h2>';
    
    foreach($data->furdo as $obj){
        echo $obj->tipus;
        echo ': ';
        echo $obj->ar;
        echo ' Ft<br>';
    }

    ?>
</body>
</html>


