function jsUdv() { // a html-√ºnkben van a button-n√°l
    // alert("Szia KiCo!")
    document.getElementById("udv").innerHTML = "Szia KiCo!" // kikeres egy elemet az id alapj√°n, amit megadtunk. Itt az "udv" id-t. Inner html = "tartalma, tulajdons√°ga - ami a k√©t tag (nyit√≥, z√°r√≥) k√∂z√∂tt szerepel". Vagy itt adunk neki √©rt√©ket, mint pl most. :)
}

function jsIdo() {
    document.getElementById("ido").innerHTML = Date() // A "Date" f√ºggv√©ny jelen√≠ti meg az id≈ët, d√°tumot, id≈ëz√≥n√°t.
}

function jsPopup() {
    let szoveg = document.getElementById("szoveg").value // mivel nem tagek k√∂z√∂tt van, hanem egy beviteli mez≈ë. A k√©t "szoveg" nem ugyanaz! Az egyik egy v√°ltoz√≥, a m√°sik az id a html-b≈ël.
    alert(szoveg)
}

function jsEltuntet() {
    document.getElementById("eltuntet").innerHTML = "" // egy sima √ºres id√©z≈ëjellel m√°r nincs is tartalma. :)
}

function jsAtir() {
    let szoveg2 = document.getElementById("atirSzoveg").value
    document.getElementById("atir").innerHTML = szoveg2
}

function jsMeret(meret) {
    if (meret === "nagy") {
        document.getElementById("meret").style.fontSize = "32px" // html-b≈ël a "meret" A "fontSize"-zal a bet≈±m√©retet √≠rjuk √°t.
    }
    else if (meret === "k√∂zepes") {
        document.getElementById("meret").style.fontSize = "16px"
    }
    else if (meret === "kicsi") {
        document.getElementById("meret").style.fontSize = "8px"
    }

}

function jsEgerrelMeret(meret) {
    if (meret === "nagy") {
        document.getElementById("meretEger").style.fontSize = "32px"
    }
    else if (meret === "norm√°l") {
        document.getElementById("meretEger").style.fontSize = "16px"
    }
}

function jsSzamologep() {
    let elsoSzam = document.getElementById("elsoSzam").value
    let muvelet = document.getElementById("muvelet").value
    let masodikSzam = document.getElementById("masodikSzam").value

    elsoSzam = Number(elsoSzam)
    masodikSzam = Number(masodikSzam)


    if (muvelet === "+") {
        eredmeny = elsoSzam + masodikSzam
    }
    else if (muvelet === "-") {
        eredmeny = elsoSzam - masodikSzam
    }
    else if (muvelet === "*") {
        eredmeny = elsoSzam * masodikSzam
    }
    else if (muvelet === "/") {
        eredmeny = elsoSzam / masodikSzam
    }
    document.getElementById("eredmeny").innerHTML = eredmeny
}
