let szoveg = "Hello KiCo!"
console.log(szoveg.length) //sz√∂veg h√°ny karakterb≈ël √°ll
console.log(`Sz√∂veg hossza: ${szoveg.length}`)
console.log(`Sz√∂veg nagybet≈±s√≠tve: ${szoveg.toUpperCase()}`) //minden karaktert nagybet≈±ss√© lesz
console.log(`Sz√∂veg kisbet≈±s√≠tve: ${szoveg.toLowerCase()}`) //minden karaktert kisbet≈±ss√© teszi.
console.log(`Sz√∂veg els≈ë karaktere: ${szoveg[0]}`)// a sz√∂veg els≈ë karakter√©nek megjelen√≠t√©se.
console.log(`Slice: ${szoveg.slice(0, 5)}`) //a sz√∂veg meghat√°rozott karaktereinek ki√≠rat√°sa (0-t√≥l 5-ig)
console.log(`Slice: ${szoveg.slice(6, 11)}`) //6-t√≥l 11. karakterig ki√≠rat√°s
console.log(`Slice: ${szoveg.slice(6)}`) //6. karaktert≈ël √≠rja ki a sz√∂veget
console.log(`Slice: ${szoveg.slice(-1)}`) //utols√≥ karaktert √≠rja ki
console.log(`Replace: ${szoveg.replace("l", "j")}`) //az l bet≈±t j bet≈±re cser√©li ki. Els≈ë karakter: amit cser√©l√ºnk, m√°sodik karakter: amire cser√©l√ºnk. Csak az els≈ë el≈ëfordul√≥ karaktert cser√©li ki.
console.log(`Replace: ${szoveg.replaceAll("l", "j")}`) // az √∂sszes l bet≈±t lecser√©i j-re.
console.log(szoveg) // az eredeti sz√∂veget √≠rja ki
szoveg = szoveg.replaceAll("l", "j") //a szoveg v√°ltoz√≥ban t√∂rt√©nt v√°ltoztat√°s ment√©se
console.log(szoveg) //a megv√°ltozott sz√∂veget √≠rja ki.
console.log(`Karakter helye: ${szoveg.indexOf("e")}`) //egy adott karakter index√©t adja vissza

