const a = 10
const b = 30

console.log(a < b) //igaz vagy hamis √©rt√©ket ad vissza. Itt igaz.
console.log(a >= b) // igaz vagy hamis √©rt√©ket ad vissza. Itt hamis, mert 10 nem nagyobb egyenl≈ë, mint 30.
console.log(a === b) //√∂sszehasonl√≠tja a k√©t √©tr√©ket, hogy ugyanazok-e. Pythonban == volt, itt, JavaScriptben ===.

// Feladat 1:
// Hans, Matt
// testt√∂megindex=testt√∂meg(kg)/magass√°g*magass√°g(m)
// Hans 78kg, 1.6m
// Matt 90kg, 1.8m

// 1. √©rt√©k t√°rol√°sa
// 2. TTI sz√°mol√°s √©s t√°rol√°s
// 3. √≠rassuk ki mendkettej√ºk TTI-√©t!
// 4. Hans-nak nagyobb-e a TTI-je?
// 5. Kinek nagyobb a testt√∂megindexe √©s mennyivel?

const HansSuly = 78
const HansMagassag = 1.6
const MattSuly = 90
const MattMagassag = 1.8
console.log("Hans testt√∂megindexe:")
let htti = HansSuly / (HansMagassag * HansMagassag) // vagy HansMag**2
console.log(htti)
console.log("Matt testt√∂megindexe: ")
let mtti = MattSuly / (MattMagassag * MattMagassag)
console.log(mtti)
console.log(htti > mtti)

// egy console.log sorba t√∂bb √©rt√©k is ki√≠rathat√≥, vessz≈ëvel elv√°lasztva.

