let kor = 10
if (kor >= 17) {
    console.log("Most m√°r szerezhetsz jogos√≠tv√°nyt. üòä") //Windows+. emoji besz√∫r√°sa
} else {
    console.log(`M√©g ${17 - kor} √©v van h√°tra a jogos√≠tv√°nyszerz√©shez. üòú`)
}

// testt√∂megindexes feladat az 5. ponttal kieg√©sz√≠tve:
// 5. Kinek nagyobb a testt√∂megindexe √©s mennyivel?
const HansS = 78
const HansM = 1.6
const MattS = 90
const MattM = 1.8
console.log("Hans testt√∂megindexe:")
let htti2 = HansS / (HansM * HansM) // vagy HansMag**2
console.log(htti2)
console.log("Matt testt√∂megindexe: ")
let mtti2 = MattS / (MattM * MattM)
console.log(mtti2)
console.log(htti2 > mtti2)
if (htti2 > mtti2) {
    console.log(`Hans test√∂megindexe nagyobb ${htti2 - mtti2} -vel.`)
} else {
    console.log(`Matt testt√∂megindexe nagyobb ${mtti2 - htti2} -vel.`)
}

// t√≠puskonverzi√≥:

let evSzam2 = "2021"
console.log(`√ârt√©k: ${evSzam2}, T√≠pus: ${typeof evSzam2}`) //v√°ltoz√≥ √©rt√©k√©nek √©s t√≠pus√°nak ki√≠rat√°sa
evSzam2 = Number(evSzam2) // √°talak√≠tjuk sz√°mm√° a sz√∂veget ("2021") Csak sz√∂vegk√©nt megadott sz√°mot lehet!!!
console.log(`√ârt√©k: ${evSzam2}, T√≠pus: ${typeof evSzam2}`)
evSzam2 = String(evSzam2) // visszaalak√≠tjuk stringg√©. F√ºggv√©nyeket nagy kezd≈ëbet≈±vl √≠runk!!!
console.log(`√ârt√©k: ${evSzam2}, T√≠pus: ${typeof evSzam2}`)

