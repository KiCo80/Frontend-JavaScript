const kedvencSzam = Number(prompt("Mi  a kedvenc sz√°mod?")) //felugrik egy PopUp ablak, be√≠rjuk a sz√°mot, amit elment v√°ltoz√≥ba, azt√°n elt≈±nik az ablak.
console.log(kedvencSzam, typeof kedvencSzam)

if (kedvencSzam === 10) {
    console.log("A 10 az egy j√≥ kis sz√°m.")
}
else if (kedvencSzam === 4) { //tov√°bbi vizsg√°latot csin√°lunk
    console.log("A 4 a legjobb sz√°m.")
} else {
    console.log("Ez is sz√©p sz√°m, de a 10 szebb, a 4 pedig a legszebb! üòú")
}

if (kedvencSzam !== 4) { // ha a kedvencSzam nem egyenl≈ë 4-gyel
    console.log("Mi√©rt nem a 4 a kedvenc sz√°mod, te kis f√ºtyike?! üò°")
}

