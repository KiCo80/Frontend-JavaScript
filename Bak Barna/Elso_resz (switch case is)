}

// feladat 2:
// Piros csapat, K√©k csapat
// Piros csapat pontsz√°mai: 96, 120, 88
// K√©k csapat pontsz√°mai: 87, 101, 98
// A h√°rom pontb√≥l √°tlagolni, elt√°rolni, azt√°n eld√∂nteni, hogy melyik nagyobb, ez√°ltal ki a gy≈ëztes.
// Nyertes csapat nev√©t ki√≠ratni vagy azt, hogy d√∂ntetlen.
// Csak akkor van nyertes, ha az √°tlagpontsz√°m legal√°bb 100. Ha nincs meg ennyi, akkor nincs gy≈ëztes.

const pirosElso = 96
const pirosMasodik = 120
const pirosHarmadik = 88

const kekElso = 87
const kekMasodik = 101
const kekHarmadik = 98

pirosAtlag = (pirosElso + pirosMasodik + pirosHarmadik) / 3
kekAtlag = (kekElso + kekMasodik + kekHarmadik) / 3

console.log(`Piros csapat √°tlagpontsz√°ma: ${pirosAtlag}`)
console.log(`K√©k csapat √°tlagpontsz√°ma: ${kekAtlag}`)

if (kekAtlag >= 100 && pirosAtlag >= 100) {
    console.log(`A versenynek van nyertese.`)
} else if (kekAtlag > pirosAtlag) {
    console.log(`A k√©k csapat nyert, ${kekAtlag} √°tlagpontsz√°mmal.`)
} else if (pirosAtlag > kekAtlag) {
    console.log(`A piros csapat nyert, ${pirosAtlag} √°tlagpontsz√°mmal.`)
} else {
    console.log(`A versenynek nincs nyertese, mert a csapatok nem √©rt√©k el a minimum 100 √°tlagpontot.`)
}

// vagy m≈±velet: || - AltGr+W
// √©s m≈±velet: &&

const osztalyzat = 5
switch (osztalyzat) { // megn√©zi az √©rt√©ket, eld√∂nti, hogy melyik igaz r√°. Ha nem igaz egyik sem, akkor a default fut le.
    case 1:
        console.log("El√©gtelen")
        break;
    case 2:
        console.log("El√©gs√©ges")
        break;
    case 3:
        console.log("K√∂zepes")
        break;
    case 4:
        console.log("J√≥")
        break;
    case 5:
        console.log("Kiv√°l√≥")
        break;
    default: // akkor fut le, ha nem j√≥ oszt√°lyzatot adtunk meg.
        console.log("Nem j√≥ oszt√°lyzat!")
}

const eletKor4 = 41
eletKor4 >= 18 ? console.log("S√∂rt k√©rek!") : console.log("Vizet k√©rek!") // egy sorban fut le: felt√©tel ? igaz √°g : hamis √°g
// ? - az igaz √°g
// : - a hamis √°g
