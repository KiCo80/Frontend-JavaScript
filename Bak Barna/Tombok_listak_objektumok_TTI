function absolut(szam) { //()-be kerül a bementi paraméter
    if (szam > 0) {
        return szam
    } else {
        return szam * (-1)
    }
}
alert(absolut(-5)) // visszaadja a szám abszolútértékét.

// Bekérünk két számot, eldöntjük, hogy melyik a nagyobb

function compare(szam1, szam2) {
    if (szam1 > szam2) {
        return szam1
    } else {
        return szam2
    }
}
alert(compare(2, 3))

// számológép feladat:
// bemegy 2 szám és egy művelet
function szamologep(szam3, szam4, muvelet) {
    // + , - , * , /
    if (muvelet === "+") {    // a + jel stringként megy be, így "" közé kerül!
        return szam3 + szam4
    } else if (muvelet === "-") {
        return szam3 - szam4
    } else if (muvelet === "*") {
        return szam3 * szam4
    } else if (muvelet === "/") {
        if (szam4 === 0) {
            return "0-val nem lehet osztani!"
        } else {
            return szam3 / szam4
        }
    } else if (muvelet === "abs") {
        return absolut(szam3)
    } else if (muvelet === "?") {
        return compare(szam3, szam4)
    }
}

alert(szamologep(4, 5, "+"))
alert(szamologep(4, 5, "-"))
alert(szamologep(4, 5, "*"))
alert(szamologep(4, 0, "/")) //0-val nem lehet osztani, a szám megvizsgálása miatt megy a figyelmeztető üzenet.
alert(absolut(-7, 8, "abs")) // az abszolútérték függvény csak egy számmal működik, a másodikat figyelmen kívül hagyja. Elég csak egy számot beírni.
