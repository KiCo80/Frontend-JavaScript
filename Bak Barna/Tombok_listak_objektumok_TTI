// OBJEKTUMOK {}-ben vannak az adatok, az adatoknak tulajdonságaik vannak

let hans = {
    keresztNev: "Hans", // a tulajdonságnak ":"-tal adjuk meg az értékét!
    vezetekNev: "Müller",
    eletKor: 35,
    magassag: 182,
    suly: 84,

    szulEv: function () { // metódus írása az objektumnak, kiszámolja Hans születési évét
        return 2021 - this.eletKor //"this"-sel mondjuk meg, hogy az ebben az objektumban lévő életkort használja!
    }
}

console.log(hans)

console.log(hans.vezetekNev) // hans objektumból a vezetéknév kiíratása
console.log(hans["vezetekNev"]) //hans objektumból vezetéknév kiíratása másik módszer

// hozzáadás objektumhoz:
hans["varos"] = "Frankfurt" //hozzáadjuk "hans" objektumhoz a "város" tulajdonságot "Frankfurt" értékkel
console.log(hans)

console.log(hans.szulEv()) // () kell mögé, mert metódust hívunk meg! A metódis színe zöld.

// feladat: mappában a TTI feladat
// 2 objektumot készíteni: Hans (Müller), Matti (Makela)
// feltölteni: vezetéknév, életkor, magasság, súly
// keresztNev, vezetekNev, eletKor, magassag, suly
// ha ezek megvannak, akkor számoljuk ki mindkettő testtömegindexét!
// Melyiknek nagyobb a TTI-je?
let hansObj = {
    keresztNev: "Hans",
    vezeteknev: "Müller",
    eletKor: 35,
    magassag: 182,
    suly: 84,

    hansTTI: function () {
        return this.suly / (this.magassag / 100) ** 2
    }
}

let mattiObj = {
    keresztNev: "Matti",
    vezetekNev: "Makela",
    eletkor: 42,
    magassag: 191,
    suly: 89,

    mattiTTI: function () {
        return this.suly / (this.magassag / 100) ** 2
    }
}
console.log(`Hans TTI-je = ${hansObj.hansTTI()}`)
console.log(`Matt TTI-je = ${mattiObj.mattiTTI()}`)

if (hansObj.hansTTI() > mattiObj.mattiTTI()) {
    console.log(`Hans TTI értéke (${hansObj.hansTTI()}) nagyobb, mint Matti TTI értéke (${mattiObj.mattiTTI()}), ennyivel = ${hansObj.hansTTI() - mattiObj.mattiTTI()}`)
} else {
    console.log(`Matti TTI értéke (${mattiObj.mattiTTI()}) nagyobb, mint Hans TTI értéke (${hansObj.hansTTI()}), ennyivel = ${mattiObj.mattiTTI() - hansObj.hansTTI()}`)
}
