JS FILE:


const balElem = document.querySelector(".bal")
const jobbElem = document.querySelector(".jobb")
const jatekos1Pontszam = document.querySelector(".jatekos1-pontszam")
const jatekos2Pontszam = document.querySelector(".jatekos2-pontszam")
const jatekos1KorPontszam = document.querySelector(".jateko1-kor-pontszam")
const jatekos2KorPontszam = document.querySelector(".jatekos2-kor-pontszam")
const ujraGomb = document.querySelector(".ujra")
const sugoGomb = document.querySelector(".sugo")
const kockaElem = document.querySelector(".kocka")
const dobasGomb = document.querySelector(".dobas")
const tartGomb = document.querySelector(".tart")

// 1. feladat: dobás
// 1/1: Szám generálás 1-től 6-ig
// 1/2: Megjelenítés a kockán
// 1/3: Vizsgálni, hogy 1 lett-e vagy sem
// 1/4: ha 1 lett, akkor a másik játékos jön
// 1/5: ha nem, akkor adjuk hozzá a dobás értékét a pontszámaihoz
// 2.: Tart gomb elkészítése
// 2/1: Összpontszám hozzáadása
// 2/2: Másik játékos
// 3: 100 pont megvan-e?
// 3/1: ha nincs: másik játékos
// 3/2: ha megvan: játék vége
// 4: Játékos váltása

let korPont = 0
let aktivJatekos = 1


// 1:

dobasGomb.addEventListener("click", function () {
    let kockaDobas = Math.trunc(Math.random() * 6) + 1
    console.log(kockaDobas) // amíg tesztelünk, addig a konzolba kiíratjuk a számokat
    kockaElem.src = `kocka-${kockaDobas}.png` // a kockadobás eredményét jeleníti meg a kockán :-)
    if (kockaDobas !== 1) {
        korPont += kockaDobas
        document.querySelector(`.jatekos${aktivJatekos}-kor-pontszam`).textContent = korPont
    }
    else {
        jatekosValtas()
    }
})

let jatekos1OsszPont = 0
let jatekos2OsszPont = 0

tartGomb.addEventListener("click", function () {
    if (aktivJatekos == 1) {
        jatekos1OsszPont += korPont // a játékos 1 eredményéhez adjuk hozzá a dobás értékét
        jatekos1Pontszam.textContent = jatekos1OsszPont
        if (jatekos1OsszPont >= 100) {
            alert("Az 1-es játékos nyert!")
        }
    }
    else {
        jatekos2OsszPont += korPont
        jatekos2OsszPont.textContent = jatekos2OsszPont
        if (jatekos2Pontszam >= 100) {
            alert("A 2-es játékos nyert!")
        }
    }
    jatekosValtas()
})

function jatekosValtas() {
    korPont = 0
    document.querySelector(`.jatekos${aktivJatekos}-kor-pontszam`).textContent = korPont
    if (aktivJatekos == 1) {
        aktivJatekos = 2
    }
    else {
        aktivJatekos = 1
    }

    balElem.classList.toggle("aktiv")
    jobbElem.classList.toggle("aktiv")
}
